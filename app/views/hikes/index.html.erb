<div class="hero-image"></div>
<p class ="blurb">Sign, up log in and add your latest hike! Also, browse the hikes of others in the Los Angeles area.</p>
<div class="container">
   <div class="row">
      <% @hikes.each do |hike| %>
      <div class="col s4">
         <div class="card card-panel hoverable">
            <div class="card-image">
               <img src="<%= hike.image_uri %>">
               <span class="card-title"><%= hike.location %></span>
            </div>
            <div class="card-content">
               <p class= "truncate"><%= hike.description %></p>
               <div class="card-action">
                  <%= link_to 'Show', hike_path(hike) %>
                  <%= link_to 'Edit', edit_hike_path(hike) %>
                  <%= link_to 'Remove', hike_path(hike), method: :delete, data: { confirm: 'Are you sure you want to delete this hike?' } %>
               </div>
            </div>
         </div>
      </div>
      <% end %>
   </div>
</div>
